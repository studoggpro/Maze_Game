               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Pane>
            <Pane>
               <children>
                  <Button fx:id="startButton" layoutX="161.0" mnemonicParsing="false" onAction="#startButtonPressed" styleClass="button" text="ENTER" textAlignment="CENTER">
