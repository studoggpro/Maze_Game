                     </children>
                     <HBox.margin>
                        <Insets left="115.0" />
                     </HBox.margin>
                  </Pane>
                  <Pane>
                     <children>
                        <Text fx:id="yourTimeText" strokeType="OUTSIDE" strokeWidth="0.0" text="00:00:00" wrappingWidth="277.3125">
