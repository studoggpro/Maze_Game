                  <Insets left="15.0" top="75.0" />
               </VBox.margin>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </Pane>
            <Pane>
               <children>
                  <Button id="endMenuRestartButton" layoutX="118.0" layoutY="1.0" mnemonicParsing="false" onAction="#restartButtonPressed" styleClass="button" text="Another Round?" />
